<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <!-- 将 Activity 的 Theme 设置成透明 -->
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <!-- 将 Activity 的 Theme 设置成透明 -->
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="ButtonBarButton" />

    <style name="ToolBarTab">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="src_height">20dp</item>
    </style>

    <style name="SettingTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#595959</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SettingGroup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <style name="SettingKey">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SettingValue" parent="SettingKey">
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="SettingButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#0000ff</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divider</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="BannerTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="BannerBackButton">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:gravity">fill_vertical</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:src">@drawable/banner_back</item>
    </style>

    <style name="BannerBackText">
        <item name="android:text">返回</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:src">@drawable/banner_back</item>
        <item name="android:gravity">fill_vertical</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="BannerBackWhiteButton">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:gravity">fill_vertical</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:src">@drawable/banner_back</item>
    </style>

    <style name="BannerBackWhiteText">
        <item name="android:text">返回</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:src">@drawable/banner_back</item>
        <item name="android:gravity">fill_vertical</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="BannerButton">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="BannerLeftButton" parent="BannerButton">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="BannerRightButton" parent="BannerButton">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="PasswordTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">-15dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="PasswordHolder">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">"___"</item>
    </style>

    <style name="ColorViewStyle">
        <item name="android:layout_width">5dp</item>
        <item name="android:layout_height">5dp</item>
    </style>

    <style name="ColorViewStyle0" parent="@style/ColorViewStyle">
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:background">@color/colors0</item>
    </style>
    <style name="ColorViewStyle1" parent="@style/ColorViewStyle">
        <item name="android:layout_marginLeft">7dp</item>
        <item name="android:background">@color/colors1</item>
    </style>
    <style name="ColorViewStyle2" parent="@style/ColorViewStyle">
        <item name="android:layout_marginLeft">14dp</item>
        <item name="android:background">@color/colors2</item>
    </style>
    <style name="ColorViewStyle3" parent="@style/ColorViewStyle">
        <item name="android:layout_marginLeft">21dp</item>
        <item name="android:background">@color/colors3</item>
    </style>
    <style name="ColorViewStyle4" parent="@style/ColorViewStyle">
        <item name="android:layout_marginLeft">28dp</item>
        <item name="android:background">@color/colors4</item>
    </style>

    <style name="LoginActivityLineView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:background">@color/colors0</item>
    </style>

</resources>
